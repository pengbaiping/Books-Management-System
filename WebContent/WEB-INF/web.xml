<servlet-name>AdminLoginServlet</servlet-name>
<servlet-class>register.control.AdminLoginServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>AdminLoginServlet</servlet-name>
<url-pattern>/AdminLogin</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>WorkerLoginServlet</servlet-name>
<servlet-class>register.control.WorkerLoginServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>WorkerLoginServlet</servlet-name>
<url-pattern>/WorkerLogin</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>ReaderLoginServlet</servlet-name>
<servlet-class>register.control.ReaderLoginServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>ReaderLoginServlet</servlet-name>
<url-pattern>/ReaderLogin</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>AddBookServlet</servlet-name>
<servlet-class>register.control.AddBookServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>AddBookServlet</servlet-name>
<url-pattern>/AddBook</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>AddWorkerServlet</servlet-name>
<servlet-class>register.control.AddWorkerServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>AddWorkerServlet</servlet-name>
<url-pattern>/AddWorker</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>AddReaderServlet</servlet-name>
<servlet-class>register.control.AddReaderServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>AddReaderServlet</servlet-name>
<url-pattern>/AddReader</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>SearchBookServlet</servlet-name>
<servlet-class>register.control.SearchBookServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>SearchBookServlet</servlet-name>
<url-pattern>/SearchBook</url-pattern>
</servlet-mapping>
</web-app>